AddDefaultCharset utf-8
AddCharset utf-8 .html .css .js .xml .json .rss .php
Options FollowSymLinks Includes ExecCGI
AddHandler server-parsed .html

ModPagespeedDisallow "*"

ErrorDocument 400     /index.php
ErrorDocument 401     /error.html
ErrorDocument 403     /error.html
ErrorDocument 404     /error.html
ErrorDocument 500     /error.html

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteRule ^soho/lc/promos/orlando-core-connect/(.*) https://promotions.centurylink.com/soho/lc/promos/core-connect-hc/?
  Redirect 301 /soho/lq/promos/phoenix/ https://promotions.centurylink.com/soho/lq/promos/core-connect-mc/
  Redirect 301 /soho/lq/promos/phoenix-core-connect/ https://promotions.centurylink.com/soho/lq/promos/core-connect-mc/
  Redirect 301 /soho/lc/promos/orlando-core-connect/ https://promotions.centurylink.com/soho/lc/promos/core-connect-hc/
</IfModule>

<IfModule mod_deflate.c>
  <IfModule mod_setenvif.c>
    <IfModule mod_headers.c>
      SetEnvIfNoCase ^(Accept-EncodXng|X-cept-Encoding|X{15}|~{15}|-{15})$ ^((gzip|deflate)\s*,?\s*)+|[X~-]{4,13}$ HAVE_Accept-Encoding
      RequestHeader append Accept-Encoding "gzip,deflate" env=HAVE_Accept-Encoding
    </IfModule>
  </IfModule>
  <IfModule mod_filter.c>
    AddOutputFilterByType DEFLATE application/atom+xml \
    application/javascript \
    application/json \
    application/rss+xml \
    application/vnd.ms-fontobject \
    application/x-font-ttf \
    application/x-web-app-manifest+json \
    application/xhtml+xml \
    application/xml \
    font/opentype \
    image/svg+xml \
    image/x-icon \
    text/css \
    text/html \
    text/plain \
    text/x-component \
    text/xml
  </IfModule>
</IfModule>

# PHP ERRORS -- STAGING SETTINGS -- COMMENT ON LIVE
php_flag display_startup_errors on
php_flag display_errors on
php_flag html_errors on

# PASSWORD PROTECTION -- STAGING SETTINGS -- COMMENT ON LIVE
AuthName "Protected Area. Please Authenticate."
AuthType Basic
AuthUserFile /var/www/.htpasswd
AuthGroupFile /dev/null
Require valid-user

